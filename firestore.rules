rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isAuth() {
      return request.auth != null;
    }

    function requestingUid() {
      return request.auth.uid;
    }

    function isRequestingUser(uid) {
      return isAuth() && requestingUid() == uid;
    }

    function getUserData(uid) {
      return get(/databases/$(database)/documents/users/$(uid)).data;
    }

    function isRole(role) {
      return isAuth() && getUserData(requestingUid()).role == role;
    }

    function isAdmin() {
      return isRole('admin');
    }

    function isOwner() {
      return isRole('owner');
    }

    // --- Collection Rules ---

    match /users/{userId} {
      allow get: if isRequestingUser(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isAuth();
      allow update: if isRequestingUser(userId) || isAdmin();
    }
    
    match /hotels/{hotelId} {
      allow get: if resource.data.isOpen == true || isAdmin() || isRequestingUser(resource.data.ownerId);
      allow list: if isAdmin();
      
      allow create: if isOwner() && isRequestingUser(request.resource.data.ownerId);
      allow update: if isAdmin() || isRequestingUser(resource.data.ownerId);
      
      match /{subcollection}/{docId=**} {
        allow read: if get(/databases/$(database)/documents/hotels/$(hotelId)).data.isOpen == true || isAdmin() || isRequestingUser(get(/databases/$(database)/documents/hotels/$(hotelId)).data.ownerId);
        allow create, update, delete: if isAdmin() || isRequestingUser(get(/databases/$(database)/documents/hotels/$(hotelId)).data.ownerId);
      }
    }
    
    match /orders/{orderId} {
      allow get: if isAdmin() || isRequestingUser(resource.data.customerId) || isRequestingUser(resource.data.ownerId);
      allow list: if isAdmin();
      allow create: if isRequestingUser(request.resource.data.customerId);
    }
    
    match /withdrawals/{withdrawalId} {
      allow list: if isAdmin();
      allow get: if isAdmin() || isRequestingUser(resource.data.ownerId);
      allow create: if isOwner() && isRequestingUser(request.resource.data.ownerId);
      
      // Admin can update status and processedDate. No other fields can be changed.
      allow update: if isAdmin() &&
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'processedDate']);
    }
  }
}
